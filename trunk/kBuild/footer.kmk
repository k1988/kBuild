_DIRFILES := $(sort $(addsuffix /.dir_created,$(_DIRS)) $(addsuffix .dir_created,$(dir $(_OBJS) $(_LIBS) $(_EXES) $(_DLLS))))

define def_createdir
$(dirfile):
	$(call MSG_L1,Creating directory $$(@D))
	$(MKDIR) -p $$(@D)
	@echo dir_created > $$@
endef

